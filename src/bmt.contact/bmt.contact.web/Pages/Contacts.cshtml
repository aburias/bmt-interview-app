@page
@model bmt.contact.web.Pages.ContactsModel
@{
}

<div class="row">
    <div class="col-md-12">
        <a asp-page="/CreateContact" class="btn btn-lg btn-primary">Create Contact</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>Contacts</h1>
            </div>
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Company Name</th>
                            <th>Mobile</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.FirstName</td>
                                <td>@contact.LastName</td>
                                <td>@contact.CompanyName</td>
                                <td>@contact.Mobile</td>
                                <td>@contact.Email</td>
                                <td>
                                    <a asp-page="/EditContact" asp-route-id="@contact.Id">Edit</a>
                                    <a asp-page="/DeleteContact" asp-route-id="@contact.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <a asp-page="/CreateContact" class="btn btn-lg btn-primary">Create Contact</a>
    </div>
</div>